@model OnlineStore.Models.User

@{
    ViewData["Title"] = "Rejestracja";
}

<h1>Rejestracja</h1>

<form method="post" action="/Account/Register">
    <div class="mb-3">
        <label for="name" class="form-label">Imię</label>
        <input type="text" name="Name" id="name" class="form-control" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="Email" id="email" class="form-control" value="@Model.Email" required />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Hasło</label>
        <input type="password" name="Password" id="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>

<p class="mt-3">Masz już konto? <a href="/Account/Login">Zaloguj się</a></p>
