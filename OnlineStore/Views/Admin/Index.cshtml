@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4 text-center">Witaj w Panelu Admina</h1>

<p class="lead text-center">Zarządzaj produktami, kategoriami, użytkownikami i zamówieniami z poziomu tego panelu.</p>

<div class="container">
    <div class="row g-3">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Produkty</h5>
                        <p class="card-text">Zarządzaj produktami w swoim sklepie.</p>
                    </div>
                    <a href="/Admin/Products" class="btn btn-light mt-3">Przejdź</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Kategorie</h5>
                        <p class="card-text">Zarządzaj kategoriami produktów.</p>
                    </div>
                    <a href="/Admin/Categories" class="btn btn-light mt-3">Przejdź</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Użytkownicy</h5>
                        <p class="card-text">Zarządzaj użytkownikami systemu.</p>
                    </div>
                    <a href="/Admin/Users" class="btn btn-dark mt-3">Przejdź</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card text-white bg-danger h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Zamówienia</h5>
                        <p class="card-text">Przeglądaj zamówienia klientów.</p>
                    </div>
                    <a href="/Admin/Orders" class="btn btn-light mt-3">Przejdź</a>
                </div>
            </div>
        </div>
    </div>
</div>
