@model IEnumerable<OnlineStore.Models.Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Lista kategorii</h1>
<a href="/Admin/CreateCategory" class="btn btn-success mb-3">Dodaj nową kategorię</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Nazwa</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a href="/Admin/EditCategory/@category.Id" class="btn btn-primary btn-sm">Edytuj</a>
                    <a href="/Admin/DeleteCategory/@category.Id" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
