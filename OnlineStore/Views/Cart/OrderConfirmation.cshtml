@model OnlineStore.Models.Order

@{
    ViewData["Title"] = "Potwierdzenie zamówienia";
}

<h1 class="mb-4">Dziękujemy za złożenie zamówienia!</h1>

<p><strong>Numer zamówienia:</strong> @Model.Id</p>
<p><strong>Data zamówienia:</strong> @Model.OrderDate.ToString("g")</p>

<h2 class="mt-4">Szczegóły zamówienia</h2>
<table class="table">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Ilość</th>
            <th>Cena jednostkowa</th>
            <th>Łącznie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderProducts)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Łączna kwota zamówienia:</strong> @Model.OrderProducts.Sum(op => op.Quantity * op.Product.Price)</p>

<a href="/" class="btn btn-primary mt-3">Wróć do strony głównej</a>
